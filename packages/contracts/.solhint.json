{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "max-line-length": ["warn", 120],
    "max-states-count": ["warn", 15],
    "no-empty-blocks": "warn",
    "no-unused-vars": "error",
    "no-unused-import": "error",
    "no-global-import": "error",
    "no-console": "error",
    "reason-string": ["warn", { "maxLength": 64 }],
    "constructor-syntax": "error",
    "imports-on-top": "error",
    "ordering": "off",
    "visibility-modifier-order": "error",
    "state-visibility": "error",
    "avoid-tx-origin": "error",
    "avoid-low-level-calls": "warn",
    "avoid-sha3": "error",
    "check-send-result": "error",
    "func-name-mixedcase": "error",
    "var-name-mixedcase": "error",
    "const-name-snakecase": "error",
    "modifier-name-mixedcase": "error",
    "event-name-capwords": "error",
    "contract-name-capwords": "error",
    "use-forbidden-name": "error",
    "named-parameters-mapping": "off",
    "immutable-vars-naming": ["error", { "immutablesAsConstants": false }],
    "private-vars-leading-underscore": ["warn", { "strict": false }],
    "explicit-types": ["error", "explicit"],
    "one-contract-per-file": "warn",
    "quotes": ["error", "double"],
    "gas-custom-errors": "warn",
    "reentrancy": "error",
    "code-complexity": ["warn", 7],
    "function-max-lines": ["warn", 50],
    "no-inline-assembly": "warn",
    "import-path-check": "off",
    "use-natspec": "off",
    "gas-indexed-events": "off",
    "gas-calldata-parameters": "off",
    "gas-strict-inequalities": "off",
    "gas-increment-by-one": "off",
    "gas-struct-packing": "warn",
    "gas-small-strings": "off"
  }
}
