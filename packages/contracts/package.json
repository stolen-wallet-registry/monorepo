{
  "name": "@swr/contracts",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "report:coverage": "rm -rf reports/coverage && mkdir -p reports/coverage && forge coverage --report lcov --report summary | tee reports/coverage/summary.txt && test -f lcov.info && mv lcov.info reports/coverage/lcov.info",
    "report:gas": "rm -rf reports/gas && mkdir -p reports/gas && forge snapshot && test -f .gas-snapshot && mv .gas-snapshot reports/gas/.gas-snapshot",
    "lint": "solhint 'src/**/*.sol' && forge fmt --check",
    "lint:sol": "solhint 'src/**/*.sol'",
    "lint:fmt": "forge fmt --check",
    "format": "forge fmt",
    "clean": "forge clean",
    "snapshot": "forge snapshot",
    "anvil": "anvil --block-time 13",
    "deploy:local": "forge script script/Deploy.s.sol --tc Deploy --rpc-url localhost --broadcast",
    "deploy:testnet": "source .env.testnet && forge script script/Deploy.s.sol --sig 'deployHub()' --rpc-url $BASE_SEPOLIA_RPC --broadcast --verify --etherscan-api-key $BASESCAN_API_KEY",
    "deploy:crosschain": "pnpm deploy:crosschain:automine && pnpm deploy:crosschain:hub && pnpm deploy:crosschain:spoke && pnpm deploy:crosschain:trust && pnpm seed:operators && pnpm deploy:crosschain:restore",
    "deploy:crosschain:automine": "cast rpc evm_setAutomine true --rpc-url http://localhost:8545 && cast rpc evm_setAutomine true --rpc-url http://localhost:8546",
    "deploy:crosschain:restore": "cast rpc evm_setIntervalMining 12 --rpc-url http://localhost:8545 && cast rpc evm_setIntervalMining 12 --rpc-url http://localhost:8546",
    "deploy:crosschain:hub": "forge script script/Deploy.s.sol:Deploy --sig 'deployHubLocal()' --rpc-url http://localhost:8545 --broadcast",
    "deploy:crosschain:spoke": "forge script script/Deploy.s.sol:Deploy --sig 'deploySpokeLocal()' --rpc-url http://localhost:8546 --broadcast",
    "deploy:crosschain:trust": "forge script script/Deploy.s.sol:Deploy --sig 'configureTrustLocal()' --rpc-url http://localhost:8545 --broadcast",
    "seed:languages": "forge script script/SeedLanguages.s.sol --rpc-url localhost --broadcast",
    "seed:operators": "forge script script/SeedOperatorData.s.sol --rpc-url localhost --broadcast",
    "seed:transactions": "forge script script/SeedTransactions.s.sol --multi --broadcast --slow",
    "deploy:testnet:hub": "source .env.testnet && forge script script/DeployTestnet.s.sol:DeployTestnetHub --rpc-url $BASE_SEPOLIA_RPC --broadcast --verify --etherscan-api-key $BASESCAN_API_KEY",
    "deploy:testnet:spoke": "source .env.testnet && forge script script/DeployTestnet.s.sol:DeployTestnetSpoke --rpc-url $OPTIMISM_SEPOLIA_RPC --broadcast --verify --etherscan-api-key $OPTIMISM_ETHERSCAN_API_KEY",
    "deploy:testnet:trust": "source .env.testnet && forge script script/DeployTestnet.s.sol:ConfigureTestnetTrust --rpc-url $BASE_SEPOLIA_RPC --broadcast",
    "export-abi": "node scripts/export-abi.js",
    "slither": "python3 -m slither . --config-file slither.config.json --fail-none",
    "slither:summary": "python3 -m slither . --config-file slither.config.json --print human-summary --fail-none",
    "slither:checklist": "python3 -m slither . --config-file slither.config.json --checklist --fail-none",
    "slither:triage": "python3 -m slither . --config-file slither.config.json --triage-mode"
  },
  "devDependencies": {
    "solhint": "^6.0.3"
  }
}
