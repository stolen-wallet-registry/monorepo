# =============================================================================
# WEB APP ENVIRONMENT VARIABLES (Vite)
# =============================================================================
# Copy this file to .env and fill in the values
# All variables must be prefixed with VITE_ to be exposed to the browser

# =============================================================================
# WEB3 CONFIGURATION
# =============================================================================

# WalletConnect Project ID (optional - get one at https://cloud.walletconnect.com)
# If not set, WalletConnect connector will not be available
VITE_WALLETCONNECT_PROJECT_ID=

# =============================================================================
# ENVIRONMENT MODE
# =============================================================================

# Enable cross-chain mode (spoke + hub chains)
# Set to "true" to enable, any other value or unset to disable
VITE_CROSSCHAIN=false

# Enable testnet mode (Base Sepolia + Optimism Sepolia)
# Set to "true" to use testnets instead of local Anvil chains
VITE_TESTNET=false

# =============================================================================
# P2P RELAY
# =============================================================================

# Custom relay server multiaddr (optional)
# Default: uses public relay for production, local for development
VITE_RELAY_MULTIADDR=

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Homepage URL - link to the marketing landing page
# Defaults to http://localhost:3000 for local development
VITE_HOMEPAGE_URL=http://localhost:3000
