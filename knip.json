{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/web": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignore": [
    "**/*.stories.{ts,tsx}",
    "**/*.test.{ts,tsx}",
    "**/*.d.ts",
    "apps/web/src/**/index.{ts,tsx}"
  ],
  "ignoreDependencies": ["tailwindcss"],
  "ignoreBinaries": ["anvil", "eslint"]
}
