{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/web": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/*.stories.tsx", "**/*.test.tsx", "**/*.d.ts"],
  "ignoreDependencies": ["tailwindcss", "@tailwindcss/vite"],
  "ignoreBinaries": ["anvil"]
}
