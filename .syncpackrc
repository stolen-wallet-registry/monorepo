{
  "dependencyTypes": ["prod", "dev"],
  "versionGroups": [
    {
      "label": "React packages should match across all packages",
      "dependencies": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "packages": ["**"]
    },
    {
      "label": "Web3 packages should match across all packages",
      "dependencies": ["wagmi", "viem", "@rainbow-me/rainbowkit", "@tanstack/react-query"],
      "packages": ["**"]
    },
    {
      "label": "TypeScript should match across all packages",
      "dependencies": ["typescript"],
      "packages": ["**"]
    },
    {
      "label": "libp2p packages allowed to differ between web (0.46.x) and relay (2.x) until WebRTC upgrade",
      "dependencies": [
        "libp2p",
        "@chainsafe/libp2p-noise",
        "@chainsafe/libp2p-yamux",
        "@chainsafe/libp2p-gossipsub",
        "@libp2p/bootstrap",
        "@libp2p/circuit-relay-v2",
        "@libp2p/config",
        "@libp2p/dcutr",
        "@libp2p/identify",
        "@libp2p/interface",
        "@libp2p/kad-dht",
        "@libp2p/keychain",
        "@libp2p/mplex",
        "@libp2p/peer-id",
        "@libp2p/peer-id-factory",
        "@libp2p/peer-record",
        "@libp2p/webrtc",
        "@libp2p/websockets",
        "@libp2p/webtransport"
      ],
      "isIgnored": true
    }
  ]
}
